{
    "name": "droptest",
    "dependencies": {
        "sokol-d": {
            "path": "../.."
        }
    },
    "environments": {
        "SOKOL_ROOTPATH": "${SOKOL_D_PACKAGE_DIR}"
    },
    "targetPath": "build",
    "targetName": "droptest",
    "configurations": [
        {
            "name": "native",
            "targetType": "executable",
            "subConfigurations": {
                "sokol-d": "imgui-static"
            }
        },
        {
            "name": "wasm",
            "targetType": "staticLibrary",
            "postGenerateCommands": [
                "$DC -run ${SOKOL_D_PACKAGE_DIR}/build.d -- --target=wasm --with-sokol-imgui --backend=gles3 --link=droptest --verbose"
            ],
            "subConfigurations": {
                "sokol-d": "imgui-wgles3"
            }
        },
        {
            "name": "wgpu",
            "targetType": "staticLibrary",
            "postGenerateCommands": [
                "$DC -run ${SOKOL_D_PACKAGE_DIR}/build.d -- --target=wasm --with-sokol-imgui --backend=wgpu --link=droptest --verbose"
            ],
            "subConfigurations": {
                "sokol-d": "imgui-wgpu"
            }
        }
    ]
}