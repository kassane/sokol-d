{
    "name": "triangle",
    "sourceFiles": [
        "../shaders/triangle.d"
    ],
    "dependencies": {
        "sokol-d": {
            "path": "../.."
        }
    },
    "environments": {
        "SOKOL_ROOTPATH": "${SOKOL_D_PACKAGE_DIR}"
    },
    "targetPath": "build",
    "targetName": "triangle",
    "buildTypes": {
        "debug": {
            "buildOptions": [
                "debugMode",
                "debugInfo"
            ]
        },
        "release": {
            "buildOptions": [
                "releaseMode",
                "inline",
                "optimize"
            ]
        },
        "release-nobounds": {
            "buildOptions": [
                "releaseMode",
                "inline",
                "noBoundsCheck",
                "optimize"
            ]
        },
        "release-betterc": {
            "buildOptions": [
                "betterC",
                "releaseMode",
                "inline",
                "noBoundsCheck",
                "optimize"
            ]
        }
    },
    "configurations": [
        {
            "name": "native",
            "targetType": "executable",
            "subConfigurations": {
                "sokol-d": "sokol-static"
            }
        },
        {
            "name": "wasm",
            "targetType": "staticLibrary",
            "postGenerateCommands": [
                "$DC -run ${SOKOL_D_PACKAGE_DIR}/build.d -- --target=wasm --backend=gles3 --link=triangle --verbose"
            ],
            "subConfigurations": {
                "sokol-d": "sokol-wgles3"
            }
        },
        {
            "name": "wgpu",
            "targetType": "staticLibrary",
            "postGenerateCommands": [
                "$DC -run ${SOKOL_D_PACKAGE_DIR}/build.d -- --target=wasm --backend=wgpu --link=triangle --verbose"
            ],
            "subConfigurations": {
                "sokol-d": "sokol-wgpu"
            }
        }
    ]
}