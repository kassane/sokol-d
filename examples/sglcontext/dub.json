{
    "name": "sglcontext",
    "dependencies": {
        "sokol-d": {
            "path": "../.."
        }
    },
    "environments": {
        "SOKOL_ROOTPATH": "${SOKOL_D_PACKAGE_DIR}"
    },
    "targetPath": "build",
    "targetName": "sglcontext",
    "configurations": [
        {
            "name": "native",
            "targetType": "executable",
            "subConfigurations": {
                "sokol-d": "sokol-static"
            }
        },
        {
            "name": "wasm",
            "targetType": "staticLibrary",
            "postGenerateCommands": [
                "$DC -run ${SOKOL_D_PACKAGE_DIR}/build.d -- --target=wasm --backend=gles3 --link=sglcontext --verbose"
            ],
            "subConfigurations": {
                "sokol-d": "sokol-wgles3"
            }
        },
        {
            "name": "wgpu",
            "targetType": "staticLibrary",
            "postGenerateCommands": [
                "$DC -run ${SOKOL_D_PACKAGE_DIR}/build.d -- --target=wasm --backend=wgpu --link=sglcontext --verbose"
            ],
            "subConfigurations": {
                "sokol-d": "sokol-wgpu"
            }
        }
    ]
}